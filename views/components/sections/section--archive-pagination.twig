<section class="section--archive-pagination grid--one text--center flex flex--wrap justify--center">
	{% if pagination.prev != null %}
		<a href="{{pagination.prev.link}}" class="{{pagination.prev.class}}"><i class="icon-arrow left" data-grunticon-embed></i></a>
	{% endif %}
	{% for page in pagination.pages %}
		{% if page.current == false %}
			<a href="{{page.link}}" class="{{page.class}}"><span class="text--uppercase font--smaller font--bold  color--gray-font">{{page.title}}</span></a>
		{% else %}
			<span class="text--uppercase font--smaller font--bold  color--black-text {{page.class}}">{{page.title}}</span>
		{% endif %}
	{% endfor %}
	{% if pagination.next != null %}
		<a href="{{pagination.next.link}}" class="{{pagination.next.class}}"><i class="icon-arrow right" data-grunticon-embed></i></a>
	{% endif %}
</section>